    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "env":{
              "PORT":"3000", 
              "SECRET_KEY":"superSecret",
              "DB_HOST":"172.17.0.2",
              "DB_USER":"cubeseed",
              "DB_PASSWORD":"cubeseedsecret"
            },
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": ["--enable-source-maps", "--unhandled-rejections=strict"]
        }
    ]
}
